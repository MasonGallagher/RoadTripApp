<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.GRP.Group5.RoadTripApp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBwIE1leFL9OfafwLB0lG46TN04D4yI6PU" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Activities.MapsActivity"
            android:label="@string/title_activity_maps" />

        <activity
            android:name=".Activities.RankActivity"
            android:label="@string/title_activity_rank" />

        <activity
            android:name=".Activities.ScheduleActivity"
            android:label="@string/title_activity_scheduler" />

        <activity android:name=".Activities.LoginActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.FrontActivity" />

        <activity
            android:name=".Activities.PlaceDetailActivity"
            android:label="@string/title_activity_placeDetail" />

        <activity android:name=".Activities.ShareActivity" />
